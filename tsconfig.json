{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "outDir": "./lib",
    "rootDir": "./src/typescript",
    "strict": true,
    "alwaysStrict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/typescript/**/*"],
  "exclude": ["node_modules", "**/*.ts.spec"]
}
